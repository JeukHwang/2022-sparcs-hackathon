{
    "name": "template-ts-eslint",
    "version": "1.0.0",
    "description": "Template for TypeScript + ESLint",
    "main": "index.js",
    "scripts": {
        "clean": "shx rm -rf ./dist",
        "build": "tsc --project dist.tsconfig.json",
        "reset": "npm run clean && npm run build",
        "lint": "npx eslint code/**/*",
        "server": "node  --experimental-specifier-resolution=node ./dist/server/index.js",
        "bundle": "npx webpack --config webpack.dist.cjs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JeukHwang/template-ts-eslint.git"
    },
    "author": "JeukHwang",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/JeukHwang/template-ts-eslint/issues"
    },
    "homepage": "https://github.com/JeukHwang/template-ts-eslint#readme",
    "dependencies": {
        "@tsconfig/node16-strictest-esm": "^1.0.3",
        "@types/express": "^4.17.13",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "cors": "^2.8.5",
        "eslint": "^8.18.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "express": "^4.18.1",
        "shx": "^0.3.4",
        "socket.io": "^4.5.1",
        "socket.io-client": "^4.5.1",
        "ts-loader": "^9.3.1",
        "typescript": "^4.7.4"
    },
    "devDependencies": {
        "webpack-cli": "^4.10.0"
    },
    "type": "module"
}
